{{>layout/header}}
<h1>Board</h1>
<div class="container">
<table class="table table-horizontal">
    <a href="/posts/save" class="btn btn-primary btn-sm active float-right" role="button" aria-pressed="true">글 쓰기</a>
    <thead class="thead-strong">
    <tr>
        <th scope="col">게시글번호</th>
        <th scope="col">제목</th>
        <th scope="col">작성자</th>
        <th scope="col">조회수</th>
        <th scope="col">추천</th>
        <th scope="col">작성일자</th>
    </tr>
    </thead>
    <tbody id="tbody">
    {{#posts}}
    <tr>
        <td>{{id}}</td>
        <td><a href="/posts/view/{{id}}">{{title}}</a></td>
        <td>{{author}}</td>
        <td>{{view}}</td>
        <td>{{recommend}}</td>
        <td>{{createdDate}}</td>
    </tr>
    {{/posts}}
    </tbody>
</table>
</div>
<nav aria-label="Page navigation ">
    <ul class="pagination justify-content-center">
        {{#hasPrev}}
            <li class="page-item">
                <a class="page-link" href="?page={{prev}}">
                <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
        {{/hasPrev}}
        {{^hasPrev}}
            <li class="page-item disabled">
                <a class="page-link" href="?page={{prev}}">
                <span aria-hidden="true" >&laquo;</span>
                </a>
            </li>
        {{/hasPrev}}
        <li class="page-item disabled">
            <a class="page-link" href="?page={{currentPage}}">{{currentPage}}</a>
        </li>
        {{#hasNext}}
            <li class="page-item">
                <a class="page-link" href="?page={{next}}">
                <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        {{/hasNext}}
        {{^hasNext}}
            <li class="page-item disabled" >
                <a class="page-link" href="?page={{next}}">
                <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        {{/hasNext}}
    </ul>
</nav>
{{>layout/footer}}